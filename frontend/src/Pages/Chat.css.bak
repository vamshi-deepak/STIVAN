/* ===========================
   CHAT PAGE - Modern Glass Design
   =========================== */

/* Page Container */
.chat-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 50%, #16213e 100%);
  padding: 0;
  position: relative;
  overflow-x: hidden;
}

/* Background Effects */
.chat-page::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  filter: blur(80px);
  animation: float 20s ease-in-out infinite;
}

.chat-page::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, rgba(118, 75, 162, 0.12) 0%, transparent 70%);
  border-radius: 50%;
  filter: blur(80px);
  animation: float 25s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(30px, -30px) scale(1.1); }
}

/* ===========================
   HERO SECTION
   =========================== */

.chat-hero {
  padding: 80px 2rem 40px;
  text-align: center;
  position: relative;
  z-index: 1;
  animation: fadeInDown 0.6s ease-out;
}

.chat-hero-content {
  max-width: 800px;
  margin: 0 auto;
}

.chat-hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 20px;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 50px;
  font-size: 0.9rem;
  color: #a8b3ff;
  margin-bottom: 24px;
  animation: fadeIn 0.8s ease-out 0.2s both;
}

.chat-hero-badge i {
  font-size: 1rem;
  color: #667eea;
}

.chat-hero-title {
  font-size: 3rem;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 16px;
  line-height: 1.2;
  animation: fadeIn 0.8s ease-out 0.3s both;
}

.gradient-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.chat-hero-subtitle {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  animation: fadeIn 0.8s ease-out 0.4s both;
}

/* ===========================
   CHAT CONTAINER
   =========================== */

.chat-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem 4rem;
  position: relative;
  z-index: 1;
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.chat-card {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(30px);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 24px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  height: calc(100vh - 400px);
  min-height: 500px;
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease;
}

.chat-card:hover {
  box-shadow: 0 25px 70px rgba(0, 0, 0, 0.4);
  transform: translateY(-2px);
}

/* Chat Header */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  padding: 20px 24px;
  background: linear-gradient(135deg, rgba(106, 17, 203, 0.4), rgba(37, 117, 252, 0.4));
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  flex-wrap: wrap;
}

.chat-header .title {
  font-weight: 700;
  font-size: 1.2rem;
  color: white;
}

.chat-sub {
  font-size: 0.85rem;
  opacity: 0.8;
  color: rgba(255, 255, 255, 0.8);
}

/* Secondary CTA Buttons */
.secondary-cta {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 8px 14px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  font-size: 0.9rem;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.secondary-cta:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(106, 17, 203, 0.5);
  transform: translateY(-2px);
}

/* Chat Area (Messages Container) */
.chat-area {
  flex: 1 1 auto;
  background: transparent;
  padding: 20px 24px;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* Message Row */
.message-row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 8px;
}

.message-row.bot {
  justify-content: flex-start;
}

.message-row.user {
  justify-content: flex-end;
}

/* Message Bubble */
.bubble {
  max-width: 78%;
  padding: 14px 16px;
  border-radius: 14px;
  line-height: 1.5;
  word-break: break-word;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.bubble.bot {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
}

.bubble.user {
  background: linear-gradient(135deg, #6a11cb, #2575fc);
  color: #fff;
  border: none;
}

/* Message Meta */
.meta {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 6px;
}

.timestamp {
  font-size: 10px;
  opacity: 0.7;
  margin-left: 6px;
}

/* Welcome Container */
.welcome-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 40px 20px;
}

.welcome-card {
  background: linear-gradient(135deg, rgba(106, 17, 203, 0.3), rgba(37, 117, 252, 0.3));
  color: #fff;
  padding: 25px;
  border-radius: 12px;
  max-width: 720px;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.15);
}

.welcome-title {
  font-size: 1.4rem;
  font-weight: 700;
  margin-bottom: 12px;
  background: linear-gradient(90deg, #ffffff, #a8daff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.welcome-subtext {
  font-size: 1rem;
  opacity: 0.9;
  line-height: 1.6;
}

/* Chat Input Area */
.chat-input-area {
  display: flex;
  gap: 12px;
  padding: 16px 20px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  background: rgba(0, 0, 0, 0.2);
}

.chat-input {
  flex: 1;
  padding: 12px 16px;
  border-radius: 999px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.05);
  font-size: 0.95rem;
  color: white;
  font-family: 'Poppins', sans-serif;
  transition: all 0.3s ease;
}

.chat-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.chat-input:focus {
  outline: none;
  border-color: #6a11cb;
  background: rgba(255, 255, 255, 0.1);
  box-shadow: 0 0 15px rgba(106, 17, 203, 0.3);
}

/* Chat Send Button */
.chat-send-btn {
  background: linear-gradient(135deg, #6a11cb, #2575fc);
  color: #fff;
  border: none;
  padding: 12px 18px;
  border-radius: 999px;
  cursor: pointer;
  font-weight: 600;
  font-size: 1rem;
  box-shadow: 0 8px 18px rgba(106, 17, 203, 0.4);
  transition: all 0.3s ease;
}

.chat-send-btn:hover:not(:disabled) {
  transform: scale(1.05);
  box-shadow: 0 12px 24px rgba(106, 17, 203, 0.5);
}

.chat-send-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: scale(1);
}

/* Responsive Design */
@media (max-width: 768px) {
  .chat-page {
    padding: 100px 12px 120px;
  }

  .chat-card {
    height: calc(100vh - 180px);
    border-radius: 16px;
  }

  .chat-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  .bubble {
    max-width: 90%;
  }

  .chat-area {
    padding: 16px;
  }

  .welcome-card {
    padding: 20px;
  }

  .welcome-title {
    font-size: 1.2rem;
  }

  .welcome-subtext {
    font-size: 0.95rem;
  }
}

@media (max-width: 480px) {
  .chat-page {
    padding: 90px 8px 100px;
  }

  .chat-card {
    height: calc(100vh - 140px);
    border-radius: 12px;
  }

  .bubble {
    max-width: 95%;
    padding: 12px 14px;
    font-size: 0.9rem;
  }

  .secondary-cta {
    padding: 6px 12px;
    font-size: 0.85rem;
  }

  .chat-input-area {
    gap: 8px;
    padding: 12px 16px;
  }

  .chat-input {
    padding: 10px 14px;
    font-size: 0.9rem;
  }

  .chat-send-btn {
    padding: 10px 14px;
    font-size: 0.9rem;
  }
}
